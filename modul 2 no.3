void insertionSortAscending(List<int> arr) {
  int n = arr.length;
  for (int i = n - 2; i >= 0; i--) {
    int key = arr[i];
    int j = i + 1;
    while (j < n && arr[j] < key) {
      arr[j - 1] = arr[j];
      j++;
    }
    arr[j - 1] = key;
  }
}

void insertionSortDescending(List<int> arr) {
  int n = arr.length;
  for (int i = n - 2; i >= 0; i--) {
    int key = arr[i];
    int j = i + 1;
    while (j < n && arr[j] > key) {
      arr[j - 1] = arr[j];
      j++;
    }
    arr[j - 1] = key;
  }
}

void display(List<int> arr) {
  for (int num in arr) {
    print('$num ');
  }
  print('');
}

void main() {
  List<int> data = [64, 25, 12, 22, 11];

  print('Data Sebelum Pengurutan:');
  display(data);

  insertionSortAscending(data);
  print('Data Setelah Pengurutan Ascending:');
  display(data);

  data = [64, 25, 12, 22, 11];

  insertionSortDescending(data);
  print('Data Setelah Pengurutan Descending:');
  display(data);
}
